@using TEDU.Web.ViewModels
@model TEDU.Web.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập hệ thống";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}
<article class="page type-page status-publish hentry instock">
  <header class="entry-header">
    <h1 class="entry-title"><span>Đăng nhập</span></h1>
  </header><!-- .entry-header -->
  <div class="row-fluid">
    <div class="span9">
      @using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "login-form", @role = "form"}))
      {
        @Html.AntiForgeryToken()
        <div class="form-group">
          <label class="col-lg-2 control-label">Tài khoản: </label>
          <div class="col-lg-6">
            @Html.TextBoxFor(model => model.UserName, new {@placeholder = "Tài khoản"})
          </div>

        </div>
        <div class="form-group">
          <label>Mật khẩu: </label>
          <div class="col-lg-6">
            @Html.PasswordFor(model => model.Password, new {@placeholder = "Mật khẩu"})

            <label>Nhớ mật khẩu @Html.CheckBoxFor(model => model.RememberMe)</label>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-6">
            <button type="submit" class="btn">Đăng nhập</button>
          </div>
        </div>


      }
    </div>
    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
  </div>
 
</article>